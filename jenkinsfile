pipeline {
    agent any
    environment {
        APP_PORT = "8000"
    }
    stages {
        stage('Checkout') {
            steps {
                echo "Checking out..."
                checkout scm
                sh 'pwd && ls -la'
            }
        }
        stage('Setup') {
            steps {
                echo "Setting up venv and installing deps..."
                sh '''
                  python3 -m venv venv
                  . venv/bin/activate
                  pip install -r requirements.txt || true
                '''
            }
        }
        stage('Lint & Test') {
            steps {
                echo "Running a simple smoke test..."
                sh '''
                  # quick check that app starts and accepts a request (background)
                  . venv/bin/activate
                  python app.py & sleep 1
                  curl -fsS http://127.0.0.1:${APP_PORT}/ || (kill %1 && exit 1)
                  kill %1 || true
                '''
            }
        }
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "Simulated deploy (only runs on main)"
            }
        }
    }
    post {
        always {
            echo "Cleaning workspace"
            cleanWs()
        }
    }
}
